{
  "name": "interview-assistant",
  "productName": "Interview Assistant",
  "version": "1.0.0",
  "description": "AI-powered stealth interview assistance application",
  "main": "dist/main.js",
  "scripts": {
    "start": "npm run build && electron .",
    "dev": "npm run build && electron . --dev",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rm -rf dist",
    "rebuild": "npm run clean && npm run build",
    "demo": "electron src/main-working-demo.js",
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "mocha --require ts-node/register tests/**/*.test.ts --timeout 10000",
    "test:e2e": "npm run build && mocha --require ts-node/register tests/e2e/setup.ts tests/e2e/workflow.test.ts --timeout 60000",
    "test:e2e:watch": "npm run test:e2e -- --watch",
    "lint": "echo 'Linting would run here'",
    "format": "echo 'Formatting would run here'"
  },
  "build": {
    "appId": "com.interview-assistant.app",
    "productName": "Interview Assistant",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "assets/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": "dmg"
    }
  },
  "devDependencies": {
    "@types/chai": "^4.3.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "^20.0.0",
    "@types/uuid": "^10.0.0",
    "chai": "^4.3.0",
    "electron": "^27.0.0",
    "electron-builder": "^26.0.12",
    "mocha": "^10.0.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "openai": "^4.0.0",
    "screenshot-desktop": "^1.15.1",
    "tesseract.js": "^6.0.1",
    "uuid": "^9.0.0",
    "whisper-node": "^1.1.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "interview",
    "assistant",
    "ai",
    "electron",
    "stealth",
    "ocr",
    "transcription"
  ],
  "author": "Interview Assistant Team",
  "license": "MIT"
}
